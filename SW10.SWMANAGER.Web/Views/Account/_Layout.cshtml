@using System.Web.Optimization
@using Abp.Timing
@using SW10.SWMANAGER.Localization
@using SW10.SWMANAGER.Web.Bundling
@using SW10.SWMANAGER.Web.Extensions

@{
    Layout = null;
    SetAntiForgeryCookie();
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="pt-br" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="pt-br" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="pt-br" dir="@(CultureHelper.IsRtl ? "rtl" : "")">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>SWMANAGER</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">

    @* Fill these meta tags upon your project specification *@
    <meta content="SWMANAGER" name="description" />
    <meta content="SWMANAGER" name="keywords">
    <meta content="SWMANAGER" name="author" />

    <link rel="shortcut icon" href="~/favicon.ico" />

    <link href="~/Content/fonts-open-sans.css" rel="stylesheet" type="text/css" />

    @Html.IncludeStyleNoCache(StylePaths.FontAwesome)
    @Html.IncludeStyleNoCache(StylePaths.Simple_Line_Icons)
    @Html.IncludeStyleNoCache(CultureHelper.IsRtl ? StylePaths.BootstrapRTL : StylePaths.Bootstrap)
    @Html.IncludeStyleNoCache(StylePaths.JQuery_Uniform)
    @Html.IncludeStyleNoCache(StylePaths.Toastr)
    @Html.IncludeStyleNoCache(StylePaths.SweetAlert)
    @Html.IncludeStyleNoCache(StylePaths.FamFamFamFlags)

    @Html.IncludeStyleNoCache("~/metronic/assets/global/css/components-md" + (CultureHelper.IsRtl ? "-rtl" : "") + ".css")
    @Html.IncludeStyleNoCache("~/metronic/assets/global/css/plugins-md" + (CultureHelper.IsRtl ? "-rtl" : "") + ".css")
    @Html.IncludeStyleNoCache("~/metronic/assets/admin/layout/css/layout" + (CultureHelper.IsRtl ? "-rtl" : "") + ".css")
    @Html.IncludeStyleNoCache("~/metronic/assets/admin/layout/css/themes/default" + (CultureHelper.IsRtl ? "-rtl" : "") + ".css")

    @Styles.Render("~/Bundles/Common/css")

    @Html.IncludeStyleNoCache("~/Views/Account/_Layout" + (CultureHelper.IsRtl ? "-rtl" : "") + ".css")

    @RenderSection("Styles", false)

    <script type="text/javascript">
        @* This is used to get the application's root path from javascript.
        It's useful if you're running application in a virtual directory under IIS. *@
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>
    <style type="text/css">
    body {
        background: url(/Common/Images/login/@(new Random().Next(1,9).ToString("D2")).jpg) no-repeat center center fixed !important;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }

    .content {
        margin-top:15%;
        background-color:rgba(236, 238, 241, 0.65);
    }
    .content .form-title {
        margin-top: 10px;
        padding-left: 145px;
        text-align: left;
        padding-top: 3px;
    }

    .content .content-footer {
        margin-bottom: 0px;
        margin-top: 5px;
    }

        .content .content-footer .copyright{
            margin:0px;
            padding:0px;
        }
    </style>
</head>


<body class="page-md login">
    <div class="menu-toggler sidebar-toggler">
    </div>
    <div class="content">
        @RenderBody()
        <div class="content-footer">
            @Html.Action("Languages", "Account")
            <div class="copyright">
                @Clock.Now.Year © SWMANAGER.
            </div>
        </div>
    </div>


    <!--[if lt IE 9]>
        <script src="~/libs/respond/respond.min.js"></script>
        <script src="~/libs/excanvas/excanvas.min.js"></script>
    <![endif]-->
    @Html.IncludeScriptNoCache(ScriptPaths.Json2)
    @Html.IncludeScriptNoCache(ScriptPaths.JQuery)
    @Html.IncludeScriptNoCache(ScriptPaths.JQuery_Migrate)
    @Html.IncludeScriptNoCache(ScriptPaths.Bootstrap)
    @Html.IncludeScriptNoCache(ScriptPaths.JQuery_BlockUi)
    @Html.IncludeScriptNoCache(ScriptPaths.JQuery_Uniform)
    @Html.IncludeScriptNoCache(ScriptPaths.JQuery_Cookie)
    @Html.IncludeScriptNoCache(ScriptPaths.Toastr)
    @Html.IncludeScriptNoCache(ScriptPaths.SpinJs)
    @Html.IncludeScriptNoCache(ScriptPaths.SpinJs_JQuery)
    @Html.IncludeScriptNoCache(ScriptPaths.SweetAlert)
    @Html.IncludeScriptNoCache(ScriptPaths.Abp)
    @Html.IncludeScriptNoCache(ScriptPaths.Abp_JQuery)
    @Html.IncludeScriptNoCache(ScriptPaths.Abp_BlockUi)
    @Html.IncludeScriptNoCache(ScriptPaths.Abp_SpinJs)
    @Html.IncludeScriptNoCache(ScriptPaths.Abp_Toastr)
    @Html.IncludeScriptNoCache(ScriptPaths.Abp_SweetAlert)

    <script type="text/javascript">
        abp.localization.defaultSourceName = '@LocalizationSourceName';
    </script>

    <!-- Dynamic scripts of ABP system (They are created on runtime and can not be bundled) -->
    <script src="~/AbpScripts/GetScripts?v=@(Clock.Now.Ticks)" type="text/javascript"></script>

    @Html.IncludeScriptNoCache(ScriptPaths.JQuery_Validation)
    @Html.IncludeScriptNoCache(ScriptPaths.JQuery_Validation_Localization)

    @Html.IncludeScriptNoCache("~/metronic/assets/global/scripts/app.js")
    <script type="text/javascript">
        App.setAssetsPath(abp.appPath + 'metronic/assets/');
    </script>

    @Scripts.Render("~/Bundles/Common/js")

    @Html.IncludeScriptNoCache("~/metronic/assets/admin/layout/scripts/layout.js")

    @RenderSection("Scripts", false)

    <script>
        jQuery(document).ready(function () {
            if (CurrentPage) {
                CurrentPage.init();
            }
        });
    </script>
</body>
</html>
