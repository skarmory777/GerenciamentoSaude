@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Web.Navigation

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Financeiros.Relatorios.RptContaPagarViewModel

@{
    ViewBag.CurrentPageName = PageNames.App.Financeiro.Relatorios.ContasReceber;
}

@section Scripts
{
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Financeiros/Relatorios/ContasReceber/Index.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("RelatorioContasReceber")</span>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="ContaPagarFilterForm">
                <input type="hidden" name="IsCredito" id="is-credito" value="true" />
                <div class="form-body" enter-key="vm.getEntradas()">
                    <div class="row margin-bottom-10">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="situacao">@L("Situacao")</label>
                                <select id="situacao" type="text" class="form-control input-sm">
                                    <option value="1">Abertos</option>
                                    <option value="4">Quitados</option>
                                    <option value="2">Cancelados</option>
                                    <option value="3">Garantidos</option>
                                    <option value="5">Jurídicos</option>
                                    <option value="0">Todos</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="tipo-data">@L("TipoData")</label>
                                <select id="tipo-data" type="text" class="form-control input-sm">
                                    <option value="1">Vencimento</option>
                                    <option value="2">Emissão</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="estoque-id">@L("Periodo")</label>
                                <input id="periodo" type="text" class="form-control date-range-picker" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="tipo-relatorio">@L("TipoRelatorio")</label>
                                <select name="TipoRelatorio" id="tipo-rel" class="form-control input-sm">
                                    <option value="1">Resumido</option>
                                    <option value="2">Detalhado</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="empresa-id">@L("Empresa")</label>
                                <select name="EmpresaId" id="empresa-id" class="form-control select2"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row margin-bottom-10">
                        <div class="form-group col-md-3">
                            <div class="form-group">
                                <label for="situacao-nota-fiscal">@L("SituacaoNotaFiscal")</label>
                                <select name="SituacaoNotaFiscal" id="situacao-nota-fiscal" class="form-control input-sm">
                                    <option value="1">Todos</option>
                                    <option value="2">Não aprovado</option>
                                    <option value="3">Aprovado</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="tipo-documento-id">@L("TipoDocumento")</label>
                            <select name="TipoDocumentoId" id="tipo-documento-id" class="form-control select2"></select>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="tipo-pessoa-id">@L("TipoPessoa")</label>
                            <select name="TipoPessoaId" id="tipo-pessoa-id" class="form-control select2"></select>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="pessoa-id">@L("Pessoa")</label>
                            <select name="PessoaId" id="pessoa-id" class="form-control select2"></select>
                        </div>
                        <div class="form-group col-md-2 div-detalhado">
                            <label for="meio-pagamento-id">@L("Cobranca")</label>
                            <select name="MeioPagamentoId" id="meio-pagamento-id" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="button" id="btnVisualizar" class="btn btn-primary blue"><i class="fa fa-search"></i>Visualizar</button>
                    </div>
                </div>
            </form>
        </div>

        <div id="dvVisualizar" class="embed-responsive embed-responsive-16by9">
            <iframe id="fVisualizar" src="" class="embed-responsive-item"><!--style="width:100%; height:400px; border:none 0; background-color:white"--></iframe>
        </div>

    </div>
</div>
