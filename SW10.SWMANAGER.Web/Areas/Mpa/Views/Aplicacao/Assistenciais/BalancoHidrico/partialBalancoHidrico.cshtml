                                <div class="md-checkbox" style="top: 10px">
                                    <input type="checkbox" id="evacuacoes_false" name="evacuacoes" value="false" class="form-control checkbox-evacuacao md-check" @(Model.Model.Evacuacoes.HasValue && !Model.Model.Evacuacoes.Value ? "checked" : "")/>
