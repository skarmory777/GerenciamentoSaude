    Model.Model.BalancoHidricoSolucoes = Model.Model.BalancoHidricoSolucoes.OrderBy(c => c.IndiceSolucao).ToList();

    Model.Model.BalancoHidricoItems = Model.Model.BalancoHidricoItems.Select(x =>
