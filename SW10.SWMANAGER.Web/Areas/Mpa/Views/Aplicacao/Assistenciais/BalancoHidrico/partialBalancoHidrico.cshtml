                                            </div>
                                        </div>
                                    }
                                    @if (solucoesArray.ElementAtOrDefault(index + totalColunas) != null)
                                    {
                                        <div class="row">
                                            <div class="col-md-12">
                                                <span class="number-size b-5"> @(solucoesArray[index + totalColunas].IndiceSolucao). </span>
                                                <input class="input-number-size navegavel" name="solucao_@solucoesArray[index + totalColunas].IndiceSolucao" autocomplete="off" value="@solucoesArray[index + totalColunas].Valor" data-id="@solucoesArray[index + totalColunas].Id" data-index="@(solucoesArray[index + totalColunas].IndiceSolucao - 1)"/>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        }
