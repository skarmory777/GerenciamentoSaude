                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">@L("DateRange")</label>
                                                        <input type="text" id="date-range-prescricao-paciente-@atendimento.Id" class="form-control date-range-picker" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">@L("Filtro")</label>
