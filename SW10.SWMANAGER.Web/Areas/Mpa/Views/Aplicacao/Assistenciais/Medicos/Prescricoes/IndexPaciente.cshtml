                                                        }*@
                                                    <button id="RefreshPrescricoesPacienteListButton-@atendimento.Id" class="btn blue" title="@L("Refresh")"><i class="fa fa-sync fa-lg"></i></button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div id="PrescricoesPacienteTable-@atendimento.Id"></div>
            </div>
        </div>
    </div>
</div>
