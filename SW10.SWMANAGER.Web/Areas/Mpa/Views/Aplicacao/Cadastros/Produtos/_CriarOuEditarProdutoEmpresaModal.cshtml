@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Cadastros.Produtos.CriarOuEditarProdutoEmpresaModalViewModel

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditProdutoEmpresa") + ": " + Model.Empresa.NomeFantasia) : L("CreateNewProdutoEmpresa")))

<div class="modal-body">

    <div class="tab-content">
        <div class="tab-pane active" id="ProdutoRelacaoEmpresaInformationsTab">
            <form name="ProdutoEmpresaInformationsForm" role="form" novalidate class="form-validation">
                @*@Html.AntiForgeryToken()
                @Html.ValidationSummary(true)*@

                <input type="hidden" name="ProdutoId" id="produto-id" value="@Model.ProdutoId">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="Id" id="id" value="@Model.Id">
                    <input type="hidden" name="CreatorUserId" id="creator-user-id" value="@Model.CreatorUserId">
                }

                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>@L("Empresa")</label>
                            @Html.DropDownListFor(m => m.EmpresaId, Model.Empresas, L("SelecioneLista"), new { Id = "cbo-empresas", @class = "form-control selectpicker", data_live_search = "true", data_none_selected_text = L("SelecioneLista") })
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>

</div>

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
