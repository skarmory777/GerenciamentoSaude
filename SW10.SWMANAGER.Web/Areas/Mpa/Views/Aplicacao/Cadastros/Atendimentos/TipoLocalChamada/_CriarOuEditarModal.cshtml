@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Cadastros.Atendimentos.TipoLocalChamada.TipoLocalChamadaViewModel

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditTipoLocalChamada") + ": " + Model.Descricao) : L("NovoTipoLocalChamada")))

<div class="modal-body">


    <div class="tab-content">
        <div class="tab-pane active" id="grupoContaAdministrativaInformationsTab">
            <form name="tipoLocalChamadaInformationsForm" role="form" class="form-validation">

                <input type="hidden" name="Id" id="tipoLocalChamadaId" value="@Model.Id" />
                <div class="row">
                    <div class="col-sm-4">
                        <label>@L("Codigo")</label>
                        <input type="text" name="Codigo" id="codigo" class="form-control input-sm" value="@Model.Codigo" required>
                    </div>
                    <div class="col-sm-8">
                        <label>@L("Descricao")</label>
                        <input type="text" name="Descricao" id="descricao" class="form-control input-sm" value="@Model.Descricao" required>
                    </div>
                </div>
                <div class="row" style="margin-top: 10px; margin-bottom: 15px;">
                    <div class="col-sm-6">
                        <label>@L("OrganizationUnits")</label>
                        <select name="UnidadeOrganizacionalId" value="@Model.UnidadeOrganizacionalId" id="unidadeOrganizacionalId" class="editar form-control select2 selectUnidadeOrganizacional " required>
                            <option value="@Model.UnidadeOrganizacionalId">@(Model.UnidadeOrganizacional != null ? Model.UnidadeOrganizacional.Descricao : null) </option>
                        </select>
                    </div>
                    <style>
                        .select2-selection__clear {
                            top: -2px;
                        }
                    </style>
                </div>

            </form>

            <form name="LocalChamadaInformationsForm" role="form" novalidate>

                <div class="portlet box blue">

                    <div class="portlet-title">
                        <div class="caption">
                            @L("SubGrupoTipo")
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                        </div>
                    </div>
                    <div class="portlet-body">

                        <input type="hidden" name="IdGrid" id="idGrid" />

                        <div class="row">
                            <div class="col-sm-4">
                                <label>@L("Codigo")</label>
                                <input type="text" name="CodigoSubGrupo" id="codigoSubGrupo" class="form-control input-sm" required>
                            </div>
                            <div class="col-sm-8">
                                <label>@L("Descricao")</label>
                                <input type="text" name="DescricaoSubGrupo" id="descricaoSubGrupo" class="form-control input-sm" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2 well pull-right" style="background:none; box-shadow:none; margin:10px -3px 0px 0px; padding:0px;">
                                <button name="Inserir" id="inserir" class="btn blue " tabindex="14"><i class="fa fa-check"></i>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
                            </div>
                        </div>

                    </div>
            </form>

            <div id="subGrupoTable"></div>

        </div>
    </div>

</div>

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
