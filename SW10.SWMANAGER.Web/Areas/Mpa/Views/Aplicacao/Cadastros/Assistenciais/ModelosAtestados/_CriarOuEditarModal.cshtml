@using Abp.Extensions
@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals
@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Cadastros.Assistenciais.ModelosAtestados.CriarOuEditarModeloAtestadoViewModel

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditModeloAtestado") + ": " + Model.Id) : L("CreateNewModeloAtestado")))

<div class="modal-body">

    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#ModeloAtestadoInformationsTab" data-toggle="tab" aria-expanded="true">
                    @L("ModeloAtestado")
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="AtestadoInformationsTab">
                <form name="ModeloAtestadoInformationsForm" role="form" novalidate class="form-validation">
                    @if (Model.IsEditMode)
                    {
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="CreatorUserId" value="@Model.CreatorUserId" />
                    }
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input class="form-control@(Model.Titulo.IsNullOrEmpty() ? "" : " edited")" value="@Model.Titulo" type="text" name="Titulo">
                                <label>@L("Descricao")</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <textarea name="Conteudo" id="conteudo" rows="5" class="jtable-textarea-input text-editor">@Model.Conteudo</textarea>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
