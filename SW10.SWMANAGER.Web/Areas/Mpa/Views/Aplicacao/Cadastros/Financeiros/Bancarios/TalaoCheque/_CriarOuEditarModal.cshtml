@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Cadastros.Financeiros.Bancarios.TalaoCheque.TalaoChequeViewModel


@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditTalaoCheque") + ": " + Model.Descricao) : L("CreateNewTalaoCheque")))

<div class="modal-body">


    <div class="tab-content">
        <div class="tab-pane active" id="grupoContaAdministrativaInformationsTab">
            <form name="talaoChequeInformationsForm" role="form" class="form-validation">

                <input type="hidden" name="Id" id="talaoChequeId" value="@Model.Id" />
                <div class="row" style="margin-bottom: 15px;">
                    <div class="col-sm-4">
                        <label>@L("Codigo")</label>
                        <input type="text" name="Codigo" id="codigo" class="form-control input-sm" value="@Model.Codigo" >
                    </div>
                    <div class="col-sm-8">
                        <label>@L("Descricao")</label>
                        <input type="text" name="Descricao" id="descricao" class="form-control input-sm" value="@Model.Descricao" >
                    </div>                 

                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>@L("DataAbertura")</label>
                            <input name="DataAbertura" id="dataAbertura" required data-val-required="@L("CampoObrigatorio")" class="form-control edited" type="text" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <label style="font-size: 10px;">@L("NumeroInicial")</label>
                        <input type="number" name="NumeroInicial" id="numeroInicial" class="form-control input-sm" value="@Model.NumeroInicial" required>
                    </div>
                    <div class="col-sm-2">
                        <label style="font-size: 10px;">@L("NumeroFinal")</label>
                        <input type="number" name="NumeroFinal" id="numeroFinal" class="form-control input-sm" value="@Model.NumeroFinal" required>
                    </div>
                    <div class="col-sm-4">
                        <label>@L("ContaCorrente")</label>
                        <select name="ContaCorrenteId" value="@Model.ContaCorrenteId" id="contaCorrenteId" class="editar form-control select2 selectContaCorrente " required>
                            <option value="@Model.ContaCorrenteId">@(Model.ContaCorrente != null ? Model.ContaCorrente.Descricao : null) </option>
                        </select>
                    </div>                    
                    <style>
                        .select2-selection__clear {
                            top: -2px;
                        }
                    </style>      
                </div>

            </form>

        </div>
    </div>

</div>

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")