@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Web.Navigation

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Cadastros.Faturamentos.FaturamentoGuiasViewModel

@{
    ViewBag.CurrentPageName = PageNames.App.Faturamentos.Faturamento;
}

@section Styles
{
    @Html.IncludeStyle("~/Areas/Mpa/Views/Aplicacao/Cadastros/Faturamentos/Guias/index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Cadastros/Faturamentos/Guias/Index.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Guia")</span>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="GuiasFilterForm" class="horizontal-form">
                <div class="form-body" enter-key="vm.getGuias()">
                    <div class="row margin-bottom-10">
                        <div class="col-md-12">
                            <div class="inputs inputs-full-width">
                                <div class="portlet-input">
                                    <form>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="input-group">
                                                    <input id="GuiasTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.Filtro">
                                                    <span class="input-group-btn">
                                                        <button id="GetGuiasButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-sm-6 text-right">
                                                <button id="ExportarGuiasParaExcelButton" class="btn btn-default"><i class="far fa-file-excel"></i> @L("ExportToExcel")</button>
                                                @if (true@*IsGranted(AppPermissions.Pages_Tenant_Cadastros_Faturamento_Guia_Create)*@)
                                                {
                                                    <button id="CreateNewGuiaButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewGuia")</button>
                                                }
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div id="GuiasTable"></div>
    </div>
</div>

<style>
    .Centralizado {
        text-align: center;
    }
</style>