        }
    </div>
</div>

<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
                <div class="form-body" enter-key="getConvenios()">
                    <div class="row margin-bottom-10">
                        <div class="col-md-12">
                            <div class="inputs inputs-full-width">
                                <div class="portlet-input">
                                    <div class="input-group">
                                        <input id="txtTabelaPrecoConveniosFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.Filtro">
                                        <span class="input-group-btn">
                                            <button id="btnGetTabelaPrecoConvenios" class="btn default" type="button"><i class="icon-magnifier"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
        </div>
        <div id="TabelaPrecoConveniosTable"></div>
    </div>
</div>

<style>
    .Centralizado {
        text-align: center;
