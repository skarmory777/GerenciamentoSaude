        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>@L("Cns")</label>
            <input name="Cns" class="form-control input-sm" type="text" value="@Model.Cns">
        </div>
    </div>
</div>

<div class="row">

