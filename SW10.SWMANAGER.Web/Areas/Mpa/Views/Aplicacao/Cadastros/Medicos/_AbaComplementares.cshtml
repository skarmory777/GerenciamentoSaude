</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>@L("NomeMae")</label>
            <input name="NomeMae" id="nomeMae" class="form-control input-sm upper" type="text" value="@Model.NomeMae">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>@L("NomePai")</label>
            <input name="NomePai" id="nomePai"  class="form-control input-sm upper" type="text" value="@Model.NomePai">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label>@L("Rg")</label>
            <input name="Rg" id="rg" class="form-control input-sm" type="text" value="@Model.Rg" onkeyup="SomenteNumero(this, 2);">
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label>@L("Emissao")</label>
            <input name="Emissao" id="emissao" class="form-control input-sm" type="text" value="@(!Model.Emissao.HasValue ? string.Empty : Convert.ToDateTime(Model.Emissao).ToShortDateString())" ng-pattern="/^((0[1-9]|1[012])[\-](0[1-9]|[12][0-9]|3[01])[\-](19|20)[0-9]{2})*$/" pattern="/^((0[1-9]|1[012])[\-](0[1-9]|[12][0-9]|3[01])[\-](19|20)[0-9]{2})*$/" />

        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label>@L("Emissor")</label>
            <input name="Emissor" id="emissor" class="form-control input-sm upper" type="text" value="@Model.Emissor">
        </div>
    </div>

    @*<div class="col-md-6">
        <div class="row">
        </div>
    </div>*@

    <div class="col-md-3">
        <div class="form-group">
            <label>@L("Cpf")</label>
