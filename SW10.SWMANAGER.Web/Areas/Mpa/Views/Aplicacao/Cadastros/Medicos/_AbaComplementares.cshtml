<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            <label for="PlanoId">@L("Religiao")</label>
            <select name="ReligiaoId" id="religiao-id" class="form-control select2">
                @if (Model.ReligiaoId.HasValue)
                {
                    <option value="@Model.ReligiaoId.Value">@Model.Religiao.Descricao</option>
                }
            </select>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label for="CorPele">@L("CorPele")</label>
            <select name="CorPeleId" id="cor-pele-id" class="form-control select2">
                @if (Model.CorPeleId.HasValue)
                {
                    <option value="@Model.CorPeleId.Value">@Model.CorPele.Descricao</option>
                }
            </select>
        </div>
