@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Authorization
@using SW10.SWMANAGER.Web.Navigation
@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Manutencoes.MailingTemplates.MailingTemplatesViewModel

@{
    ViewBag.CurrentPageName = PageNames.App.Manutencao.MailingTemplates;
}

@section Styles
{
    @Html.IncludeStyle("~/Areas/Mpa/Views/Aplicacao/Manutencoes/MailingTemplates/index.min.css")
    <link href="~/libs/jquery-chosen/css/chosen.css" rel="stylesheet" />
    <link href="~/libs/linecontrol-editor/editor.css" rel="stylesheet" />
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("MailingTemplates")</span>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        @*<button id="ExportarTiposAtendimentoParaExcelButton" class="btn btn-default"><i class="far fa-file-excel"></i> @L("ExportToExcel")</button>*@
        @if (IsGranted(AppPermissions.Pages_Tenant_Manutencao_MailingTemplates_Create))
            {
            <button id="CreateNewMailingTemplateButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewMailingTemplate")</button>
        }
    </div>
</div>
<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="MailingTemplatesFilterForm" class="horizontal-form">
                <div class="form-body" enter-key="vm.getMailingTemplates()">
                    <div class="row margin-bottom-10">
                        <div class="col-md-12">
                            <div class="inputs inputs-full-width">
                                <div class="portlet-input">
                                    <form>
                                        <div class="input-group">
                                            <input id="MailingTemplatesTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.Filtro">
                                            <span class="input-group-btn">
                                                <button id="GetMailingTemplatesButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div id="MailingTemplatesTable"></div>
    </div>
</div>

@section Scripts
{
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Manutencoes/MailingTemplates/Index.js")
    <script src="~/libs/jquery-chosen/js/chosen.js"></script>
    <script src="~/libs/linecontrol-editor/editor.js"></script>
}