@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Authorization
@using SW10.SWMANAGER.Web.Navigation
@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Desenvolvimento.ControleProducoes.CriarOuEditarControleProducaoModalViewModel

@{
   ViewBag.CurrentPageName = PageNames.App.Desenvolvimento.ControleProducao;
}

@section Styles
{
    @Html.IncludeStyle("~/Areas/Mpa/Views/Aplicacao/Desenvolvimento/ControleProducoes/index.min.css")
    @Html.IncludeStyle("~/libs/jquery-chosen/css/chosen.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Desenvolvimento/ControleProducoes/_CriarOuEditarModal.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Desenvolvimento/ControleProducoes/Index.js")

    @Html.IncludeScript("~/libs/jquery-chosen/js/chosen.js")

}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("ControleProducao")</span>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button id="ExportarControleProducoesParaExcelButton" class="btn btn-default"><i class="far fa-file-excel"></i> @L("ExportToExcel")</button>
        @if (IsGranted(AppPermissions.Pages_Tenant_Manutencao_Consultor_Tabela))
            {
            <button id="CreateNewControleProducaoButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewControleProducao")</button>
        }
    </div>
</div>
<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="ControleProducoesFilterForm" class="horizontal-form">
                <div class="form-body" enter-key="vm.getControleProducoes()">
                    <div class="row margin-bottom-10">
                        <div class="col-md-12">
                            <div class="inputs inputs-full-width">
                                <div class="portlet-input">
                                    <form>
                                        <div class="row">
                                            <div class="col-xs-6">
                                                @*@Html.DropDownListFor(m => m.EstadoId, Model.Estados, L("FiltroEstado"), new { @class = "form-control selectpicker", data_live_search = "true", data_none_selected_text = L("FiltroEstado"), id = "cbo-estados" })*@
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <button id="RefreshControleProducoesListButton" class="btn btn-default" style="display: block; width: 100%"><span class="fa fa-search"></span> @L("Search")</button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="input-group">
                                            @*<input id="ControleProducoesTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.Filtro">*@
                                            <span class="input-group-btn">
                                                <button id="GetControleProducoesButton" class="btn default" type="submit"><span class="fa fa-search" title="@L("Filtrar")"></span></button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div id="ControleProducoesTable"></div>
    </div>
</div>
