@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals
@* @model TModel *@
@section Scripts
{
    @Html.IncludeScript("~/libs/imask/imask.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Suprimentos/Relatorios/IndexAcuracia.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Acuracia")</span>
                </h1>
            </div>
        </div>
    </div>
    @*<div class="col-xs-6 text-right">
            <button data-formato="Excel" class="btnExportar btn btn-default"><i class="far fa-file-excel"></i> @L("ExportToExcel")</button>
            <button data-formato="PDF" class="btnExportar btn btn-default"><i class="fa fa-file-pdf-o"></i> @L("ExportToPdf")</button>
            <button data-formato="Word" class="btnExportar btn btn-default"><i class="fa fa-file-word-o"></i> @L("ExportToWord")</button>
        </div>*@
</div>
<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <div class="form-body">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="bold">Filtros:</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="EmpresaId">Cabeçalho @L("Empresa")</label>
                            <select name="empresaId" id="empresa-id" class="editar form-control select2 selectEmpresa" required>
                                @*<option value="@Model.EmpresaId">@(Model.Empresa != null ? string.Concat(Model.Empresa.Codigo, " - ", Model.Empresa.NomeFantasia) : null) </option>*@
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">@L("Estoque")</label>
                            <select name="estoqueId" id="estoque-id" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">@L("Data")</label>
                            <input type="text" class="form-control date-range-picker" />
                        </div>
                    </div>
                    <div class="col-md-3" style="margin-top: 20px;">
                        <button type="button" id="btnVisualizar" class="btn btn-primary blue"><i class="fa fa-search"></i>Visualizar</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="dvVisualizar" class="row" style="display: none;">
            <iframe id="fVisualizar" src="" style="width:100%; height:70vh; border:none 0; background-color:white"></iframe>
        </div>
    </div>
</div>