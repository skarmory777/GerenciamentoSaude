@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals
@* @model TModel *@
@section Scripts
{
    @Html.IncludeScript("~/libs/imask/imask.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Suprimentos/Relatorios/IndexUltimasCompras.js")
}

<div class="portlet light margin-bottom-0">
    <div class="portlet-body">

        @Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader_Bold.cshtml", new ModalHeaderViewModel("Últimas Compras"))
        <div class="form">
            <div class="form-body">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="bold">Filtros:</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="EmpresaId">Cabeçalho @L("Empresa")</label>
                            <select name="empresaId" id="empresa-id" class="editar form-control select2 selectEmpresa" required>
                                @*<option value="@Model.EmpresaId">@(Model.Empresa != null ? string.Concat(Model.Empresa.Codigo, " - ", Model.Empresa.NomeFantasia) : null) </option>*@
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 col-lg-offset-3">
                        <div class="form-group">
                            <label class="control-label">@L("Data")</label>
                            <input type="text" class="form-control date-range-picker" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">@L("Quantidade de compras")</label>
                            <input type="number" name="rank" id="rank" class="form-control" value="3" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">@L("Número de casas decimais")</label>
                            <input type="number" name="rank" id="casasDecimais" class="form-control" value="4" />
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">@L("Estoque")</label>
                            <select name="estoqueId" id="estoque-id" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">@L("Grupo")</label>
                            <select name="grupoId" id="grupo-id" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">@L("Produto")</label>
                            <select name="produtoId" id="produto-id" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">@L("Descrição Produto")</label>
                            <input type="text" name="produtoDescricao" id="produto-descricao" placeholder="procure por partes da descrição do produto." class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">@L("Fornecedor")</label>
                            <select name="FornecedorId" id="fornecedor-id" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">@L("Laboratorio")</label>
                            <select name="LaboratorioId" id="laboratorio-id" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group" style="margin-left: 9px">
                            <label class="control-label" style="margin-left: -9px">@L("Variação %")</label>
                            <div class="row">
                                <input type="text" name="variacaoInicial" id="variacaoInicial" class="form-control" style="width:41% !important;display:inline-block" />
                                <label class="control-label" style="padding-left:5px; padding-right:5px">Até</label>
                                <input type="text" name="variacaoFinal" id="variacaoFinal" class="form-control" style="width:41% !important;display:inline-block"  />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 col-lg-offset-1 text-right" style="margin-top: 20px;">
                        <button type="button" id="btnVisualizar" class="btn btn-primary blue"><i class="fa fa-search"></i>Visualizar</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="dvVisualizar" class="row" style="display: none;">
            <iframe id="fVisualizar" src="" style="width:100%; height:70vh; border:none 0; background-color:white"></iframe>
        </div>
    </div>
</div>