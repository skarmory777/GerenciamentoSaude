@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals
@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Web.Navigation

@{
    ViewBag.CurrentPageName = PageNames.App.SuprimentosEstoque.Entrada;
}

@section Scripts
{
    @Html.IncludeScript("~/Scripts/MyScripts.js")
}

<div class="portlet light container-fluid " style="padding: 0px !important;">
    @Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader_Botoes.cshtml", new ModalHeaderViewModel(L("NotasPendentes")))

    <div class="portlet-body col-md-12 margin-bottom-10">
        <div class="form">
            <form id="PreMovimentoFilterForm" class="horizontal-form">
                <div class="form-body" style="padding: 7.5px;">
                    <div class="row margin-bottom-10">
                        <div class="col-md-12">
                            <div class="inputs inputs-full-width">
                                <div class="portlet-input">
                                    <form>
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label for="FornecedorId">@L("Fornecedor")</label>
                                                    <select name="FornecedorId" id="FornecedorId-pendentes" class="editar form-control select2 selectForncedor-pendentes"></select>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label class="control-label">@L("DateRangeEmissao")</label>
                                                    <input type="text" class="form-control date-range-picker" />
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>@L("Filtro")</label>
                                                    <input  name="Filtro" class="form-control filtro-texto-pendentes" placeholder="@L("SearchWithThreeDot")" type="text">
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div id="notasPendentesTable"></div>
    </div>
</div>
