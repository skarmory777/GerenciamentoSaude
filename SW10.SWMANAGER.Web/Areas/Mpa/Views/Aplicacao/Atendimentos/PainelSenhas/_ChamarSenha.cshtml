@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Atendimentos.PainelSenhas.ChamarSenhaModalViewModel

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("ChamarSenha", Model.SenhaId)))

<div class="modal-body container-fluid">
    <div class="row" id="painel-senha">
        <div class="col-sm-4">
            <div class="form-group">
                <label>@L("TipoLocalChamada")</label>
                <select name="TipoLocalChamadaId" id="cbo-tipo-local-chamada-id" class="form-control select2 selectTipoLocalChamada" style="width:100%;">
                    @if (Model.TipoLocalChamada!=null)
                    {
                        <option value="@Model.TipoLocalChamada.Id">@Model.TipoLocalChamada.Codigo - @Model.TipoLocalChamada.Descricao</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">@L("LocalChamada")</label>
                <select name="LocalChamadaId" id="cbo-local-chamada-id" class="form-control select2 selectLocalChamada">
                    @if (Model.LocalChamada!=null)
                    {
                        <option value="@Model.LocalChamada.Id">@Model.LocalChamada.Codigo - @Model.LocalChamada.Descricao</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>@L("Senha")</label>
                <input type="hidden" value="@Model.SenhaId" id="txt-senha-id" />
                <input type="text" value="@Model.SenhaId" class="form-control input-sm" disabled />
                @*<select name="SenhaId" id="senha-id" class="form-control select2 selectSenha" style="width:100%">
                    @if (Model.SenhaId.HasValue)
                    {
                        <option value="@Model.SenhaId.Value">@Model>@Model.Senha.Codigo - @Model.Senha.Descricao</option>
                    }
                </select>*@
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button id="btn-chamar-senha" class="btn btn-primary btn-icon-only" title="@L("ChamarSenha")"><i class="fa fa-bullhorn"></i></button>
        </div>
    </div>
</div>