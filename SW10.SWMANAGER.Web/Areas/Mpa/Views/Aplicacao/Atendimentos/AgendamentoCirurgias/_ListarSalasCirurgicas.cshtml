@model IEnumerable<SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Atendimentos.AgendamentoCirurgias.ListarSalasCirurgicasViewModel>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-sm-8">
            <h3 class="h3">@L("SalasCirurgicas")</h3>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                    <label for="filtro-todos-medicos">@L("Todos")</label>
                    <input name="FiltroTodosMedicos" id="filtro-todos-medicos" class="form-group icheck checkbox-inline" type="checkbox" value="true" checked />
            </div>
            <input type="hidden" id="ultimo-medico" value="" />
            <input type="hidden" id="filtro-medico-id" value="" />
            <input type="hidden" id="ultima-tab" value="" />
        </div>
    </div>
    <div class="accordion">
        @foreach (var item in Model)
        {
            <h3 class="filtro-medico" id="@item.SalaCirurgica.Id">
                <div class="row">
                    <div class="col-sm-2">
                        <span style="width:25px;height:20px;display:block;background-color:@(item.SalaCirurgica.CorAgendamentoConsulta)">&nbsp;</span>
                    </div>
                    <div class="col-sm-10">
                        <span>@item.SalaCirurgica.Descricao</span>
                        <span>(@item.DiasSemana)</span>
                    </div>
                </div>
            </h3>
            <div>
                @foreach (var agendamento in item.Agendamentos)
                {
                    <div class="row">
                        <div class="col-sm-6">
                            @L("TipoCirurgia"):
                        </div>
                        <div class="col-sm-6">@agendamento.TipoCirurgia.Descricao</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @L("Horarios"):
                        </div>
                        <div class="col-sm-6">@agendamento.Horarios</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @L("Intervalo"):
                        </div>
                        <div class="col-sm-6">@(string.Format("{0} minuto{1}", agendamento.IntervaloMinutos, agendamento.IntervaloMinutos > 1 ? "s" : ""))</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @L("DiasSemana"):
                        </div>
                        <div class="col-sm-6">@agendamento.DiasSemana</div>
                    </div>
                    <p class="white-space">&nbsp;</p>
                }
            </div>
        }
    </div>
}
<p class="white-space">&nbsp;</p>
