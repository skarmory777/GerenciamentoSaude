@using SW10.SWMANAGER.Web.Navigation
@using SW10.SWMANAGER.Web.Extensions;
@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Atendimentos.Relatorios.FiltroModel

@{
    ViewBag.CurrentPageName = PageNames.App.Atendimentos.AgendamentoCirurgias;
}

@section Styles
{

    @Html.IncludeStyleNoCache("~/metronic/assets/global/plugins/select2/css/select2.min.css")
    @Html.IncludeStyleNoCache("~/metronic/assets/global/plugins/select2/css/select2-bootstrap.min.css")

    @Html.IncludeStyleNoCache("~/Areas/Mpa/Views/Aplicacao/Suprimentos/Estoques/PreMovimentos/index.min.css")
}
@section Scripts
    {
    @Html.IncludeScriptNoCache("~/metronic/assets/global/plugins/select2/js/select2.full.min.js")
    @Html.IncludeScriptNoCache("~/Scripts/MyScripts.js")
    @*@Html.IncludeScriptNoCache("~/Areas/Mpa/Views/Aplicacao/Atendimentos/AgendamentoConsultas/_CriarOuEditarModal.js")*@
    @*@Html.IncludeScriptNoCache("~/Areas/Mpa/Views/Aplicacao/Atendimentos/AgendamentoCirurgias/Index.js")*@
    @Html.IncludeScriptNoCache("~/Areas/Mpa/Views/Aplicacao/Atendimentos/AgendamentoCirurgias/IndexListagemAgendamento.js");
    @Html.IncludeScriptNoCache("~/libs/jquery-fullcalendar/js/fullcalendar.min.js")
    @Html.IncludeScriptNoCache("~/libs/jquery-fullcalendar/js/gcal.min.js")

}


<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("ListagemAgendamento")</span>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="agendamentoFilterForm" class="horizontal-form">
                <div class="form-body">
                    <div class="row margin-bottom-10">

                        <div class="row">

                            <div class="col-sm-5">
                                <label>@L("Paciente")</label>
                                <select name="PacienteId" id="pacienteId" class="form-control select2 selectPaciente2"></select>
                            </div>
                            <div class="col-sm-5">
                                <label>@L("Medico")</label>
                                <select name="MedicoId" id="medicoId" class="form-control select2 selectMedico2"></select>
                            </div>
                            <div class="form-group col-md-1 text-left" style="padding-top:1%">
                                <button type="button" id="btnVisualizar" class="btn btn-primary blue"><i class="fa fa-search"></i>Visualizar</button>
                                <div style="display:inline-block; width:10px;"></div>

                            </div>
                        </div>

                        <div class="row">
                            <div id="divDataRange" class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">@L("Data")</label>
                                    <input id="dateRangeAgendamento" name="DateRangeAgendamento" type="text" class="form-control date-range-picker" />
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <label>@L("Sala")</label>
                                <select name="SalaId" id="salaId" class="form-control select2 selectSala2"></select>
                            </div>
                            <div class="col-sm-2">
                                <label>@L("TipoCirurgia")</label>
                                <select name="TipoCirurgiaId" id="tipoCirurgiaId" class="form-control select2 selectTipoCirurgia2"></select>
                            </div>

                            <div class="col-sm-3">
                                <label>@L("Procedimento")</label>
                                <select name="ProcedimentoId" id="procedimentoId" class="form-control select2 selectCirurugia2"></select>
                            </div>

                        </div>




                    </div>
                </div>
            </form>
        </div>
        <div id="AgendamentosTable"></div>
    </div>
</div>





