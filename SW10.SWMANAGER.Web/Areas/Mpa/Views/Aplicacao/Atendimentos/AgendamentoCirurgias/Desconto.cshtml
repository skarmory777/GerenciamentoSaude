@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals


@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Atendimentos.AgendamentoCirurgias.AgendamentoDescontoViewModel




@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Desconto"))

<div class="modal-body container-fluid">

    <div class="tabbable-line container-fluid">

        <div class="tab-content container-fluid">
            <div class="tab-pane active" id="AgendamentoConsultaMedicoDisponibilidadeInformationsTab">
                <div class="portlet light margin-bottom-0">
                    <div class="portlet-body">
                        <div class="inputs inputs-full-width">
                            <div class="portlet-input">
                                <form name="AgendamentoConsultaInformationsForm" role="form" novalidate class="form-validation">
                                    <input type="hidden" name="Id" id="id" value="@Model.Id" />
                                    <input type="hidden" name="DescontoJson" id="descontoJson" value="@Model.DescontoJson" />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>@L("ValorSemDesconto")</label>
                                                <input type="text" id="valorSemDesconto"  class="form-control input-sm" readonly value="@Model.ValorSemDesconto" />
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>@L("Desconto")</label>
                                                <input type="text" id="valorDesconto" class="form-control input-sm"  value="@Model.ValorDescontoTotal"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div id="procedimentosTable">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <div class="row">

        <div class="col-sm-3">
            <button type="button" class="btn default close-button" data-dismiss="modal">@L("Cancel")</button>
        </div>
        <div class="col-sm-2">
            <button type="button" id="btnSalvarDesconto" class="btn blue save-button" style="width:100px"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </div>
</div>


