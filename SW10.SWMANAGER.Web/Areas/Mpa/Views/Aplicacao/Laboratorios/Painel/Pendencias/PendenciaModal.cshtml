
@using Abp.Extensions
@using MoreLinq
@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Laboratorios.LaboratorioBaixaDetalhamentoViewModel
<style>
    .form-control:disabled, .form-control[readonly] {
        background-color: #e9ecef;
        opacity: 0.75;
    }
    .popover.in {
        z-index: 99999;
    }
    
    .resultadoExameAnchor.active, .resultadoExameAnchor.active:hover {
        background: #525e64;
        color: white;
    }
</style>
<div class="modal-title">
    <div class="row" style="margin-right: -9px !important;margin-left: 0px !important;">
        <div class="col-md-10">
            <h4 class="text-left bold">
                <span id="kit-descricao">Adicionar Pendencias Exames</span>
            </h4>
        </div>
        <div class="col-md-2 text-right">
            <button type="button" id="fechar-modal" class="btn btn-circle btn-icon-only btn-default fa fa-close" data-dismiss="modal" aria-hidden="true"></button>
        </div>
    </div>
</div>
<div class="modal-body">
    <form name="resultadoExameForm" role="form"  class="form-validation">
        <input type="hidden" id="resultado_id" value="@Model.ResultadoId"/>
        <div class="row">
            <div class="col-md-12">
                <div class="row" style="max-height: 700px; overflow: auto">
                    @if (Model.Items.Any())
                    {
                        <div class="col-md-12">
                            <h4 class="font-weight-bold">Pendência por Material</h4>
                        </div>
                    }
                    @{
                        var size = Model.Items.Count() > 4 ? 3 : Model.Items.Count() == 1 ? 6 : 12 / Model.Items.Count();
                    }
                    @foreach (var item in Model.Items)
                    {
                        <div class="col-md-@size resultado-exame" data-id="@item.Id">
                            <div class="panel panel-default">
                                <div class="panel-heading font-weight-bold" style="font-size: 15px"> @item.FaturamentoItem.Descricao</div>
                                <div class="panel-body">
                                    <textarea class="form-control text-editor"></textarea>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn blue save-button"><i class="fa fa-save"></i> <span>@L("salvar")</span></button>
</div>