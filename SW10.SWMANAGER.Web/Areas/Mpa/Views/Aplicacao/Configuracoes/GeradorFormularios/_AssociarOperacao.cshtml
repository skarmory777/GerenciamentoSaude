@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Configuracoes.GeradorFormularios.AssociarOperacaoViewModel

@section Styles
{
    @Html.IncludeStyle("~/Areas/Mpa/Views/Aplicacao/Configuracoes/GeradorFormularios/index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Configuracoes/GeradorFormularios/_AssociarOperacao.js")
}

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("AssociarOperacao: " + @Model.FormConfig.Nome)))

<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            <div class="row margin-bottom-5">
                <div class="col-xs-12">
                    <div class="page-head">
                        <div class="page-title">
                            <h1>
                                <span>@L("OperacoesDisponiveis")</span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet light margin-bottom-0">
                <div class="portlet-body">
                    <div class="form">
                        <form id="OperacoesDisponiveisFilterForm" class="horizontal-form">
                            <input type="hidden" name="OperacoesIncluidas" id="operacoes-incluidas" value="@Model.OperacoesIncluidas" />
                            <input type="hidden" name="FormId" id="form-id" value="@Model.FormConfigId" />
                            <div class="form-body" enter-key="vm.getOperacoesDisponiveis()">
                                <div class="row margin-bottom-10">
                                    <div class="col-md-12">
                                        <div class="inputs inputs-full-width">
                                            <div class="portlet-input">
                                                <form>
                                                    @*<div class="input-group">
                                                            <input id="OperacoesDisponiveisTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="">
                                                            <span class="input-group-btn">
                                                                <button id="GetOperacoesDisponiveisButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                                                            </span>
                                                        </div>*@
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>@L("Filtro")</label>
                                                                <input id="OperacoesDisponiveisTableFilter" class="form-control input-sm" placeholder="@L("SearchWithThreeDot")" type="text" value="">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>@L("Modulo")</label>
                                                                <select name="ModuloId" class="form-control input-sm select2" id="modulo-id">
                                                                    @if (Model.ModuloId.HasValue)
                                                                    {
                                                                        <option value="@Model.ModuloId">@Model.Modulo.Codigo - @Model.Modulo.Descricao</option>
                                                                    }
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 text-right">
                                                            <button name="GetOperacoesDisponiveisButton" id="GetOperacoesDisponiveisButton" class="btn-icon-only icon-circle btn btn-primary"><i class="fa fa-search"></i></button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="OperacoesDisponiveisTable"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row margin-bottom-5">
                <div class="col-xs-12">
                    <div class="page-head">
                        <div class="page-title">
                            <h1>
                                <span>@L("OperacoesAssociadas")</span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet light margin-bottom-0">
                <div class="portlet-body">
                    <div class="form">
                        <form id="OperacoesAssociadasFilterForm" class="horizontal-form">
                            <input type="hidden" name="OperacoesRemovidas" id="operacoes-removidas" value="@Model.OperacoesRemovidas" />
                            <div class="form-body" enter-key="vm.getOperacoesAssociadas()">
                                <div class="row margin-bottom-10">
                                    <div class="col-md-12">
                                        <div class="inputs inputs-full-width">
                                            <div class="portlet-input">
                                                <form>
                                                    <div class="input-group">
                                                        <input id="OperacoesAssociadasTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="">
                                                        <span class="input-group-btn">
                                                            <button id="GetOperacoesAssociadasButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                                                        </span>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="OperacoesAssociadasTable"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
