                                    <label for="chk-{{formConfig.Col2.Name}}-{{multiOpcao.Id}}">
                                        <span class="inc"></span>
                                        <span class="check"></span>
                                        <span class="box"></span>
                                        {{multiOpcao.Opcao}}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-show="formConfig.Col1.Colspan == true">
                <div class="col-md-12">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input ng-show="formConfig.Col1.Type == 'text' || formConfig.Col1.Type =='email' || formConfig.Col1.Type =='datetime'"
