                               class="form-control">
                        <select ng-show="formConfig.Col1.Type === 'select'"
                                id="{{formConfig.Col1.Id}}"
                                ng-model="formConfig.Col1.Value"
                                ng-readonly="ReadOnly"
                                class="form-control edited chosen-select">
                            <option ng-repeat="multiOpcao in formConfig.Col1.MultiOption" value="{{multiOpcao.Opcao}}">{{multiOpcao.Opcao}}</option>
                        </select>
                        <label for="{{formConfig.Col1.Name}}">{{formConfig.Col1.Label}}</label>
                    </div>
                    <div ng-show="formConfig.Col1.Type === 'radio'">
                        <div class="radio" ng-repeat="multiOpcao in formConfig.Col1.MultiOption">
                            <div class="md-radio-list">
                                <div class="md-radio-inline">
                                    <input type="radio" name="{{formConfig.Col1.Name}}" ng-model="formConfig.Col1.Value" ng-readonly="ReadOnly" id="rdo-{{formConfig.Col1.Name}}-{{multiOpcao.Id}}" value="{{multiOpcao.Opcao}}" class="md-radio-inline" /><label for="rdo-{{formConfig.Col1.Name}}-{{multiOpcao.Id}}">{{multiOpcao.Opcao}}</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div ng-show="formConfig.Col1.Type === 'checkbox'">
                        <div ng-repeat="multiOpcao in formConfig.Col1.MultiOption">
                            <div class="md-checkbox-list">
                                <div class="md-checkbox">
                                    <input type="checkbox"
                                           name="{{formConfig.Col1.Name}}"
                                           ng-readonly="ReadOnly"
                                           ng-model="multiOpcao.IsChecked"
                                           ng-true-value="true"
                                           ng-false-value="false"
                                           value="{{multiOpcao.Opcao}}"
                                           class="md-check"
                                           id="chk-{{formConfig.Col1.Name}}-{{multiOpcao.Id}}">
                                    <label for="chk-{{formConfig.Col1.Name}}-{{multiOpcao.Id}}">
                                        <span class="inc"></span>
                                        <span class="check"></span>
                                        <span class="box"></span>
                                        {{multiOpcao.Opcao}}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <br />
            <br />
        </div>
    </div>
</div>