@using Abp.Web.Mvc.Extensions
@using SW10.SWMANAGER.Web.Areas.Mpa.Models.Common.Modals

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Configuracoes.GeradorFormularios.AssociarUnidadeOrganizacionalViewModel

@section Styles
{
    @Html.IncludeStyle("~/Areas/Mpa/Views/Aplicacao/Configuracoes/GeradorFormularios/index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Mpa/Views/Aplicacao/Configuracoes/GeradorFormularios/_AssociarUnidadeOrganizacional.js")
}

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("AssociarUnidadeOrganizacional: " + @Model.FormConfig.Nome)))

<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            <div class="row margin-bottom-5">
                <div class="col-xs-12">
                    <div class="page-head">
                        <div class="page-title">
                            <h1>
                                <span>@L("UnidadesOrganizacionaisDisponiveis")</span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet light margin-bottom-0">
                <div class="portlet-body">
                    <div class="form">
                        <form id="UnidadesOrganizacionaisDisponiveisFilterForm" class="horizontal-form">
                            <input type="hidden" name="UnidadesIncluidas" id="unidades-incluidas" value="@Model.UnidadesIncluidas" />
                            <input type="hidden" name="FormId" id="form-id" value="@Model.FormConfigId" />
                            <div class="form-body" enter-key="vm.getUnidadesOrganizacionaisDisponiveis()">
                                <div class="row margin-bottom-10">
                                    <div class="col-md-12">
                                        <div class="inputs inputs-full-width">
                                            <div class="portlet-input">
                                                <form>
                                                    <div class="input-group">
                                                        <input id="UnidadesOrganizacionaisDisponiveisTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="">
                                                        <span class="input-group-btn">
                                                            <button id="GetUnidadesOrganizacionaisDisponiveisButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                                                        </span>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="UnidadesOrganizacionaisDisponiveisTable"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row margin-bottom-5">
                <div class="col-xs-12">
                    <div class="page-head">
                        <div class="page-title">
                            <h1>
                                <span>@L("UnidadesOrganizacionaisAssociadas")</span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet light margin-bottom-0">
                <div class="portlet-body">
                    <div class="form">
                        <form id="UnidadesOrganizacionaisAssociadasFilterForm" class="horizontal-form">
                            <input type="hidden" name="UnidadesRemovidas" id="unidades-removidas" value="@Model.UnidadesRemovidas" />
                            <div class="form-body" enter-key="vm.getUnidadesOrganizacionaisAssociadas()">
                                <div class="row margin-bottom-10">
                                    <div class="col-md-12">
                                        <div class="inputs inputs-full-width">
                                            <div class="portlet-input">
                                                <form>
                                                    <div class="input-group">
                                                        <input id="UnidadesOrganizacionaisAssociadasTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="">
                                                        <span class="input-group-btn">
                                                            <button id="GetUnidadesOrganizacionaisAssociadasButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                                                        </span>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="UnidadesOrganizacionaisAssociadasTable"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
