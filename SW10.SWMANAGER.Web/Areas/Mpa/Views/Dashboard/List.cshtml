@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Dashboards.DashboardViewModel

<div class="form">
    <form id="FaturamentosFilterForm" class="horizontal-form">
        <div class="form-body" enter-key="vm.getTabelaPreenchida()">
            <div class="row margin-bottom-10">
                <div class="col-md-12">
                    <div class="inputs inputs-full-width">
                        <div class="portlet-input">
                            <form>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">@L("Empresa")</label>
                                            @if (Model.Empresas.Count() == 1)
                                            {
                                                <input type="hidden" name="EmpresaId" value="@Model.Empresas.FirstOrDefault().Value" id="cbo-empresas" />
                                                <input type="text" class="form-control" name="EmpresaLabel" value="@Model.Empresas.FirstOrDefault().Text" id="empresa-label" disabled />
                                            }
                                            else
                                            {
                                                @Html.DropDownListFor(m => m.EmpresaId, Model.Empresas, new { @class = "form-control selectpicker", data_live_search = "true", data_none_selected_text = L("FiltroEmpresa"), id = "cbo-empresas" })
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group">
                                            <input id="FaturamentosTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.Filtro">
                                            <span class="input-group-btn">
                                                <button id="GetFaturamentosButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div id="FaturamentosTable"></div>
