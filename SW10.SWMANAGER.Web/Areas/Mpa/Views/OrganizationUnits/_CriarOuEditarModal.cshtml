                                <input name="IsLocalUtilizacao" id="is-local-utilizacao-tab" type="checkbox" class="form-control icheck checkbox-inline chk-montagem-tela-sub" value="true" @Html.Raw(Model.IsLocalUtilizacao ? "checked=\"checked\"" : "") />&nbsp;
                                <label for="is-local-utilizacao-tab">@L("LocalUtilizacao")</label>
