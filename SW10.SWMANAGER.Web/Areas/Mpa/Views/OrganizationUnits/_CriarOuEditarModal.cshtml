                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input name="ControlaAlta" id="controla-alta-tab" type="checkbox" class="form-control icheck checkbox-inline chk-montagem-tela-sub" value="true" @Html.Raw(Model.ControlaAlta ? "checked=\"checked\"" : "") />&nbsp;
                                <label for="controla-alta-tab">@L("ControlaAlta")</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input name="IsAmbulatorioEmergencia" id="is-ambulatorio-emergencia-tab" type="checkbox" class="form-control icheck checkbox-inline chk-montagem-tela-sub" value="true" @Html.Raw(Model.IsAmbulatorioEmergencia ? "checked=\"checked\"" : "") />&nbsp;
                                <label for="is-ambulatorio-emergencia-tab">@L("IsAmbulatorioEmergencia")</label>
