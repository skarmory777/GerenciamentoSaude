                                <input name="IsControlaLeito" id="is-controlaLeito-tab" type="checkbox" class="form-control icheck checkbox-inline chk-montagem-tela-sub" value="true" @Html.Raw(Model.IsControlaLeito ? "checked=\"checked\"" : "") />&nbsp;
                                <label for="is-controlaLeito-tab">@L("ControlaLeito")</label>
                            </div>
                        </div>
                    </div>
