                                <label for="is-setor-exames-tab">@L("SetorExames")</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input name="IsEstoque" id="is-estoque-tab" type="checkbox" class="form-control icheck checkbox-inline chk-montagem-tela-sub" value="true" @Html.Raw(Model.IsEstoque ? "checked=\"checked\"" : "") />&nbsp;
                                <label for="is-estoque-tab">@L("Estoque")</label>
