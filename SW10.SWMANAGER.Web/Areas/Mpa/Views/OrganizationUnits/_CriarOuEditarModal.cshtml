@using Abp.Organizations

@model SW10.SWMANAGER.Web.Areas.Mpa.Models.Aplicacao.Cadastros.UnidadesOrganizacionais.CriarOuEditarUnidadeOrganizacionalModalViewModel

<div class="modal-body container-fluid">

    <div class="tabbable-line container-fluid">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#UnidadeOrganizacionalInformationsTab" data-toggle="tab" aria-expanded="true">
                    @L("UnidadeOrganizacional")
                </a>
            </li>
        </ul>
        <div class="tab-content container-fluid">
            <div class="tab-pane active" id="UnidadeOrganizacionalInformationsTab">

                <input type="hidden" id="organization-unit-id" value="@Model.OrganizationUnitId" />

                <form name="OrganizationUnitForm" role="form" novalidate class="form-validation">
                    <input type="hidden" name="ParentId" id="parent-id" value="@Model.CreateOrganizationUnit.ParentId" />
                </form>

                <form name="UnidadeOrganizacionalInformationsForm" role="form" novalidate class="form-validation">

                    <input type="hidden" name="OrganizationUnitId" value="@Model.OrganizationUnitId" />

                    @if (Model.IsEditMode)
                    {
                        <input type="hidden" name="Id" id="is-edit-mode" value="@Model.Id" />
                        <input type="hidden" name="CreatorUserId" value="@Model.CreatorUserId" />
                        <input type="hidden" name="UnidadeOrganizacionalTipoId" value="@Model.UnidadeInternacaoTipoId" />
                    }
                    else
                    {
                        <input type="hidden" name="Id" id="is-edit-mode" value="0" />
                    }

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>@L("Name")</label><br />
                                <input class="form-control input-md" type="text" id="display-name" required maxlength="@OrganizationUnit.MaxDisplayNameLength" value="@Model.OrganizationUnitNome" style="width:100%;">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>@L("Descricao")</label>
                                <input name="Descricao" class="form-control input-md" type="text" value="@Model.Descricao">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>@L("Localizacao")</label>
                                <input name="Localizacao" class="form-control input-md" type="text" value="@Model.Localizacao">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>@L("HoraInicialPrescricao")</label>
                                <input name="HoraInicioPrescricao" class="form-control input-md" type="time" value="@Model.HoraInicioPrescricao" pattern="[0-9]{2}:[0-9]{2} [0]{2}$" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>@L("Estoque")</label>
                                <select id="estoqueId" name="EstoqueId" class="editar form-control  select2 selectEstoque">
                                    <option value="@Model.EstoqueId">@(Model.Estoque != null ? string.Concat(Model.Estoque.Codigo, " - ", Model.Estoque.Descricao) : null) </option>
                                </select>
                            </div>
                        </div>
                    </div>



